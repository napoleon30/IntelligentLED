<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg4"
    tools:context="${relativePackage}.${activityClass}" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/btn_single_color_edit_back"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/back_led" />

        <TextView
            android:id="@+id/tv_plan_name"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5.2"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/btn_single_color_edit_save"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@drawable/save"
            android:padding="5dp" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center_vertical" >

        <Button
            android:id="@+id/btn_single_color_edit_left"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:background="@drawable/intelligent_left" />

        <Button
            android:id="@+id/btn_single_color_edit_right"
            android:layout_width="45dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30dp"
            android:background="@drawable/intelligent_right" />

        <TextView
            android:id="@+id/tv_week"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/monday"
            android:textSize="18sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:text="@string/time_1"
                        android:textColor="@android:color/black"
                         />

                    <TextView
                        android:id="@+id/tv_left_time1"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:paddingRight="10dp"
                        android:paddingLeft="10dp"
                        android:background="@android:color/darker_gray"
                        android:textColor="@android:color/white"
                        android:text="00:00" />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:text="~" />

                    <TextView
                        android:id="@+id/tv_right_time1"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="#FF8000"
                        android:gravity="center"
                        android:text="23:57"
                        android:textColor="@android:color/white"
                        android:paddingLeft="10dp"
                         android:paddingRight="10dp"
                       />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:id="@+id/tv_1_1"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                         />

                    <SeekBar
                        android:id="@+id/seekbar_1_1"
                        android:layout_width="230dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:max="100"
                        android:maxHeight="40dp"
                        android:minHeight="40dp"
                        android:progress="0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:id="@+id/tv_1_2"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                         />

                    <SeekBar
                        android:id="@+id/seekbar_1_2"
                        android:layout_width="230dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:max="100"
                        android:maxHeight="40dp"
                        android:minHeight="40dp"
                        android:progress="0" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:text="@string/time_2"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_left_time2"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:background="@android:color/darker_gray"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:paddingRight="10dp"
                          android:paddingLeft="10dp"
                        android:text="23:57"/>

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:text="~" />

                    <TextView
                        android:id="@+id/tv_right_time2"
                        android:layout_width="100dp"
                        android:paddingLeft="10dp"
                         android:paddingRight="10dp"
                        android:layout_height="match_parent"
                        android:background="#FF8000"
                        android:gravity="center"
                        android:textColor="@android:color/white"
                        android:text="23:58"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:id="@+id/tv_2_1"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/black" />

                    <SeekBar
                        android:id="@+id/seekbar_2_1"
                        android:layout_width="230dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:max="100"
                        android:maxHeight="40dp"
                        android:minHeight="40dp"
                        android:progress="0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:id="@+id/tv_2_2"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/black" />

                    <SeekBar
                        android:id="@+id/seekbar_2_2"
                        android:layout_width="230dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:max="100"
                        android:maxHeight="40dp"
                        android:minHeight="40dp"
                        android:progress="0" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:text="@string/time_3"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_left_time3"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                         android:background="@android:color/darker_gray"
                        android:gravity="center"
                        android:paddingRight="10dp"
                          android:paddingLeft="0dp"
                           android:textColor="@android:color/white"
                        android:text="23:58"
                        />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                         android:textColor="@android:color/black"
                        android:text="~" />

                    <TextView
                        android:id="@+id/tv_right_time3"
                        android:layout_width="100dp"
                        android:paddingLeft="10dp"
                         android:paddingRight="10dp"
                        android:text="23:59"
                        android:layout_height="match_parent"
                        android:background="#ff8000"
                         android:textColor="@android:color/white"
                        android:gravity="center"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:id="@+id/tv_3_1"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/black" />

                    <SeekBar
                        android:id="@+id/seekbar_3_1"
                        android:layout_width="230dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:max="100"
                        android:maxHeight="40dp"
                        android:minHeight="40dp"
                        android:progress="0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:id="@+id/tv_3_2"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/black" />

                    <SeekBar
                        android:id="@+id/seekbar_3_2"
                        android:layout_width="230dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:max="100"
                        android:maxHeight="40dp"
                        android:minHeight="40dp"
                        android:progress="0" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:paddingBottom="10dp"
                android:paddingTop="10dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="5dp"
                        android:gravity="center"
                        android:text="@string/time_4"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_left_time4"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:paddingRight="10dp"
                          android:paddingLeft="10dp"
                           android:background="@android:color/darker_gray"
                         android:textColor="@android:color/white"
                        android:gravity="center"
                        android:text="23:59"
                        />

                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="match_parent"
                         android:textColor="@android:color/black"
                        android:gravity="center"
                        android:text="~" />

                    <TextView
                        android:id="@+id/tv_right_time4"
                        android:layout_width="100dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:text="24:00"
                         android:textColor="@android:color/white"
                        android:layout_height="match_parent"
                        android:background="@android:color/darker_gray"
                        android:gravity="center"
                         />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:id="@+id/tv_4_1"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/black" />

                    <SeekBar
                        android:id="@+id/seekbar_4_1"
                        android:layout_width="230dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:max="100"
                        android:maxHeight="40dp"
                        android:minHeight="40dp"
                        android:progress="0" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center_horizontal" >

                    <TextView
                        android:id="@+id/tv_4_2"
                        android:layout_width="50dp"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textColor="@color/black" />

                    <SeekBar
                        android:id="@+id/seekbar_4_2"
                        android:layout_width="230dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="5dp"
                        android:max="100"
                        android:maxHeight="40dp"
                        android:minHeight="40dp"
                        android:progress="0" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>