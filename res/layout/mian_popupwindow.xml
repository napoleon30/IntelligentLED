<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/popupwind_bg"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/add_for_wifi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="20dp"
        android:gravity="center"
        android:background="@drawable/popupwind_pressed1"
        android:paddingBottom="10dp"
        android:text="@string/wifi_add"
        android:textSize="18sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#778899" />

    <TextView
        android:id="@+id/add_for_scan"
        android:layout_width="match_parent"
        android:gravity="center"
        android:background="@drawable/popupwind_pressed2"
        android:layout_height="match_parent"
        android:text="@string/qr_code_scanner"
        android:textSize="18sp" />

</LinearLayout>